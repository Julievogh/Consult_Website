---
import Pill from "../components/Pill.astro";
import BigText from "../components/BigText.astro";
import Base from "../layouts/Base.astro";
import Columns from "../components/Columns.astro";
import Card from "../components/Card.astro";
import { Image } from "astro:assets";
import CreativeIdeasImg from "../../src/icons/creativeideas.svg";
import BestFeatImg from "../../src/icons/bestfeat.svg";
import EarthImg from "../../src/icons/earth.svg";
import ThingsImg from "../../src/icons/things.svg";
---

<Base>
  <section class="container">
    <div class="upper_div">
      <div>
        <Pill title="growing with our clients" color="yellow" />
        <BigText text="Our core values & principles"/>
        <p>Capitalize on low hanging fruit to identify a ballpark value added activity beta test. Override the digital divide with additional from DevOps.</p>
      </div>
      <div class="button_container">
        <button>Get in touch</button>
      </div>
    </div>
    <div>
      <Columns cols="4">
        <Card title="Creative Ideas" imgSrc={CreativeIdeasImg} />
        <Card title="So cool" imgSrc={BestFeatImg} />
        <Card title="Inspiration" imgSrc={EarthImg} />
        <Card title="Easy solutions" imgSrc={ThingsImg} />
      </Columns>
    </div>
  </section>
</Base>

<style>
  .container {
    background: #F5F5F5;
    margin: 2rem 2rem;
    padding: 2rem;
  }

  .upper_div {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
  }

  button {
    background: #181818;
    color: #F5F5F5;
    height: clamp(1rem, 20px, 3rem);
    border-radius: var(--border-radius-hero);
    padding: 1rem;
    justify-self: flex-end;
  }

  .button_container {
    align-self: flex-end;
  }

  h2 {
    
    var(--pill-style);
  }

  .grid-container {
    display: grid;
    gap: 1rem;
  }

  .grid-container > * {
    grid-column: content;
  }

  .full-size {
    grid-column: full;
  }

  @media (max-width: 768px) {
    .container {
      background: #F5F5F5;
      margin: 2rem 18rem;
    }
  }
</style>

---
import styles from "../../styles/global.css";
import Pill from "../components/Pill.astro";
---

<div class="hero">
  <div class="hero-bg-img">
    <div class="hero-info-container">
      <div class="content-wrapper">
        <Pill title="Services" color="yellow" />
        <p>Creative Services For Boost Your Business Growth</p>
      </div>
    </div>
  </div>
</div>

<style>
  .hero-info-container {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    grid-template-rows: 1fr 1fr 1fr;
    text-align: left;
    border-radius: var(--border-radius-hero);
  }

  .content-wrapper {
    margin-left: 10px;
    grid-column: 2 / span 2;
    grid-row: 2;
    justify-self: center;
    background-color: rgba(255, 255, 255, 0.7);
    padding: 1rem 2rem;
    border-radius: 20px;
    
    width: 80%;
  }

  .hero-bg-img {
    display: flex;
    background: url("../imgs/7f605bfdf789dc3d9a8aca2013d44538.jpeg");
    background-size: cover;
    max-height: 40vh;
    max-width: 100%;
  }

  

  h2 {
  }
  p {
    font-size: 2rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-top: 0;
    margin-bottom: 0.6rem;
  }

  @media (max-width: 768px) {
    .content-wrapper {
     
      width: 50%;
      margin: 0 auto; 
    }
  }
</style>

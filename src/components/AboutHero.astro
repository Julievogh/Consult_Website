---
import styles from "../../styles/global.css";
---



<div class="hero">
  <div class="hero-bg-img">
    <div class="hero-info-container">
      <div class="content-wrapper">
        <h2>Services</h2>
        <p>Creative Services For Boost Your Business Growth</p>
      </div>
    </div>
  </div>
</div>

<style>
  .hero-info-container {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    grid-template-rows: 1fr 1fr 1fr;
    text-align: left;
    border-radius: var(--border-radius-hero);
  }

  .content-wrapper {
    margin-left: 10px;
    grid-column: 2 / span 2;
    grid-row: 2;
    justify-self: center;
    background-color: rgba(255, 255, 255, 0.7);
    padding: 1rem 2rem;
    border-radius: 20px;
  }

  .hero-bg-img {
    display: flex;
    background: url("../imgs/7f605bfdf789dc3d9a8aca2013d44538.jpeg");
    background-size: cover;
    max-height: 40vh;
  }

  /* Put in var pill */

  h2 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-top: 0;
    margin-bottom: 0;
    background-color: #FFCC4A;;
    border-radius: 20px;
    max-width: fit-content;
    padding: 0.1rem 0.6rem;
    margin: 1rem 0;
  }
  p {
    font-size: 2rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-top: 0;
    margin-bottom: 0.6rem;
  }
</style>
